<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="105dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/rvProfile"
        android:layout_marginTop="59dp"
        android:src="@drawable/instagram_user_outline_24"
        android:layout_alignLeft="@+id/rvProfile" />

    <Button
        android:id="@+id/btAddPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="75dp"
        android:text="Add Profile Photo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="64dp" />

    <TextView
        android:id="@+id/tvPosts"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="128dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProfile"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="150dp" />

    <Button
        android:id="@+id/btLogOut"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profileImage"
        android:layout_alignStart="@+id/btAddPic"
        android:text="Log out"
        android:layout_alignLeft="@+id/btAddPic" />

    <TextView
        android:id="@+id/homeUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="183dp"
        android:text="joshuaib"
        android:textStyle="bold" />
</RelativeLayout>